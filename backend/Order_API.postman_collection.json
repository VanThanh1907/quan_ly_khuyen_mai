    {
      "name": "üéØ NoSQL Demo Scenario",
      "item": [
        {
          "name": "Step 1: Get Products",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.data.length > 0) {",
                  "        pm.environment.set('productId', jsonData.data[0]._id);",
                  "        console.log('Product ID set:', jsonData.data[0]._id);",
                  "        console.log('Product name:', jsonData.data[0].name);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/products",
              "host": ["{{baseUrl}}"],
              "path": ["api", "products"]
            }
          }
        },
